# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = false
max_line_length = 80
trim_trailing_whitespace = false

[*.less]
indent_size = 2

[*.md]
max_line_length = 0
